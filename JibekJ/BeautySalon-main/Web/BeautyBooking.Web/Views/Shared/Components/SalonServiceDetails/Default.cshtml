@model BeautyBooking.Web.ViewModels.SalonServices.SalonServiceDetailsViewModel
@{
    ViewData["Title"] = "Магазин";
}

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Магазин</label>
    <div class="col-sm-10">
        <div class="form-control">@Model.SalonName</div>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Адрес</label>
    <div class="col-sm-10">
        <div class="form-control">@Model.SalonCityName, @Model.SalonAddress</div>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">Товар</label>
    <div class="col-sm-10">
        <div class="form-control">@Model.ServiceName</div>
    </div>
</div>
