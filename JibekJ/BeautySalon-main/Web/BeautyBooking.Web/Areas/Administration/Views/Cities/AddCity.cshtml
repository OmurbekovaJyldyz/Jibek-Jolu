@model BeautyBooking.Web.ViewModels.Cities.CityInputModel
@{
    this.ViewData["Title"] = "Добавить новый город";
}
<div class="col-lg-6">
    <h2>Новый город</h2>
    <form method="post"  enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Имя</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Cities" asp-action="AddCity">
                    Добавить город
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Cities" asp-action="Index">Отмена</a>
            </div>
        </div>
    </form>
</div>


      