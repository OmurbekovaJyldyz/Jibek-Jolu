@model BeautyBooking.Web.ViewModels.Salons.SalonInputModel
@{
    this.ViewData["Title"] = "Добавить новый магазин";
    var categories = this.ViewData["Categories"] as SelectList;
    var cities = this.ViewData["Cities"] as SelectList;
    
}
<div class="col-lg-6">
    <h2>Новый магазин</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Название</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Изображение</label>
            <div class="col-sm-10">
                <input type="file" asp-for="@Model.Image" class="form-control-file image-upload" required="required" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Категория</label>
            <div class="col-sm-10">
                <select asp-for="@Model.CategoryId" class="form-control" asp-items="@categories">
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Город</label>
            <div class="col-sm-10">
                <select asp-for="@Model.CityId" class="form-control" asp-items="@cities">
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Адрес</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Address" class="form-control" required="required">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
         <div class="form-group row">
            <label class="col-sm-2 col-form-label">Долгота</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Lat" class="form-control" required="required">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Широта</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Lng" class="form-control" required="required">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Salons" asp-action="AddSalon">
                    Добавить магазин
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Salons" asp-action="Index">Отмена</a>
            </div>
        </div>
       
    </form>
</div>
</html>
@section Scripts {
    <script src="~/js/upload-image.js" asp-append-version="true"></script>
}
